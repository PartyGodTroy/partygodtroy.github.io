---
import BlogLayout from "@/layouts/BlogLayout.astro"
import Layout from "@/layouts/Layout.astro"
import type { Post } from "@/site"


export const post:Post = {
    title: 'Welcome to the Astro blog',
    description: 'I wanted A new blog in Astro, so I made one. This is the first post. lets see how it goes.',
    tags: ['astro', 'demo'],
    slug: 'new-blog-smell',
    date: Date.parse('2021-09-01'),
    featured_img: {
        url: "/blog/new-blog-smell/cover.jpg",
        alt: "A random image from picsum",
        width: 300,
        height: 200
    },
}

---

<BlogLayout post={post}>
    <div class="max-w-screen-lg mx-auto pt-10">
        <section>

            <h2>Welcome to my new blog!</h2>
            <p>
                This is the stack
            </p>
        </section>
<section>
    <h2>Motivations</h2>
    <p></p>
</section>
    </div>
</BlogLayout>

<style>
    h2 {
        @apply text-3xl font-bold;
    }
    p{
        @apply text-lg;
    }
    section{
        @apply my-3;
    }
</style>